<div class="col-md-3">
    <div class="list-group bright background-clouds color-text">
        <div class="list-group-item"><h3>Menu</h3></div>
        {{#each data.sideMenu}}
            {{#if isActive}}
                <a href="{{path}}" class="list-group-item active">{{title}}</a>
            {{else}}
                <a href="{{path}}" class="list-group-item">{{title}}</a>
            {{/if}}
        {{/each}}
    </div>
</div>