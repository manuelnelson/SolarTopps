{{> navigation}}
{{> breadcrumb}}
<section>
    <div class="container">
        {{> profile-sideMenu}}
        <div class="col-md-9">
            <div class="content">
                <h1><span>Solar Party</span></h1>

                <form class="form-horizontal">
                    <fieldset>
                        <legend>(*Required)</legend>
                        {{> generic-form}}
                        <!-- Button Drop Down -->
                        <div class="form-group">
                            <label class="col-md-10 control-label" for="existingCustomer" style="text-align: left;">* Are You an Existing Customer</label>
                            <div class="col-md-10">
                                <div class="input-group"><input id="existingCustomer" class="form-control"
                                                                name="existingCustomer" type="text" placeholder="Yes/No?"/>
                                    <div class="input-group-btn">
                                        <button class="btn btn-default dropdown-toggle" type="button"
                                                data-toggle="dropdown"> Choose One
                                        </button>
                                        <ul class="dropdown-menu pull-right">
                                            <li><a href="#">Yes</a></li>
                                            <li><a href="#">No</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Button Drop Down -->
                        <div class="form-group">
                            <label class="col-md-10 control-label" for="systemCommissioned" style="text-align: left;">Has Your System Been Commissioned?</label>
                            <div class="col-md-10">
                                <div class="input-group"><input id="systemCommissioned" class="form-control"
                                                                name="systemCommissioned" type="text" placeholder="Yes/No?"/>
                                    <div class="input-group-btn">
                                        <button class="btn btn-default dropdown-toggle" type="button"
                                                data-toggle="dropdown"> Choose One
                                        </button>
                                        <ul class="dropdown-menu pull-right">
                                            <li><a href="#">Yes</a></li>
                                            <li><a href="#">No</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Button Drop Down -->
                        <div class="form-group">
                            <label class="col-md-10 control-label" for="hostDuringCommissioning" style="text-align: left;">If Your
                            System Has Not Been Commissioned, Would You Like to Host Your Party During the Commissioning?</label>
                            <div class="col-md-10">
                                <div class="input-group"><input id="hostDuringCommissioning" class="form-control"
                                                                name="hostDuringCommissioning" type="text" placeholder="Yes/No"/>
                                    <div class="input-group-btn">
                                        <button class="btn btn-default dropdown-toggle" type="button"
                                                data-toggle="dropdown"> Choose One
                                        </button>
                                        <ul class="dropdown-menu pull-right">
                                            <li><a href="#">Yes</a></li>
                                            <li><a href="#">No</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Textarea -->
                        <div class="form-group"><label class="col-md-10 control-label" style="text-align: left;" for="partyDate">If No to Above, What
                            Date Would You Like To Host Your Solar Party?</label>
                            <div class="col-md-10">
                                <div class="input-group date datetimepicker">
                                    <input id="partyDate" class="form-control" name="partyDate" type="text" placeholder="Please use the tool on the right to select a date/time "/>
                                    <span class="input-group-addon">Date/Time</span></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10"><textarea id="comments" class="form-control" name="comments">Provide any additional information you feel necessary</textarea></div>
                        </div>
                        <div class="form-group"><div class="col-md-4"><button type="submit" id="submit-form" class="btn btn-lead btn-lg">Submit</button></div></div>
                    </fieldset>
                </form>
                <div class="confirmationMessage" style="display:none;">
                    <hr>
                    {{#if data.form.confirmationMessage}}
                        {{{data.form.confirmationMessage}}}
                    {{else}}
                        <p>Thanks for contacting us. We will get back to you as soon as possible.</p>
                    {{/if}}
                </div>
                <input type="hidden" id="user" value="{{data.user.id}}"/>
            </div>
        </div>
    </div>
    </div>
</section>
<script type="text/javascript">
    $(function () {
        $('.content form').on('click', '#submit-form', function (e) {
            e.preventDefault();

            $('form').parsley().validate();
            if ($('form').parsley().isValid() === true) {

            }
        });

        $('.datetimepicker').datetimepicker();

        $('.input-group-btn ul li a').click(function (e) {
            e.preventDefault();
            var $this = $(this);
            var currVal = $this.parents('.input-group').find('input').val();
            $this.parents('.input-group').find('input').val(currVal + ' ' + $this.text());
        });
    });
</script>
