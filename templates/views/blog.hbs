{{> navigation}}
<div class="background-clouds breadcrumbs-container">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="index.html">Home</a></li>
            <li class="active">Blog</li>
            <li class="active">List of entries</li>
        </ol>
    </div>
</div>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                {{#each data.posts.results}}
                    <div class="media blog-entry">
                        <div class="pull-left">
                            <img class="media-object" src="{{image.url}}" alt="...">
                        </div>
                        <div class="media-body">
                            <div class="blog-entry-content">
                                <div class="category">{{#each categories}}{{name}}{{/each}}</div>
                                <h2><a href="/blog/post/{{slug}}">{{title}}</a></h2>
                                <div class="date">{{dateFormat publishedDate}}</div>
                                <div class="content">
                                    {{{content.brief}}}
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
                <ul class="pagination">
                    <li class="disabled"><a href="#">«</a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">»</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <!-- Responsive calendar - START -->
                <div class="responsive-calendar background-lead-dark color-white">
                    <div class="controls">
                        <a class="btn btn-lead pull-left" data-go="prev"><i class="fa fa-chevron-left"></i></a>
                        <a class="btn btn-lead pull-right" data-go="next"><i class="fa fa-chevron-right"></i></a>
                        <h4 class="timeInfo"></h4>
                    </div>
                    <div class="day-headers">
                        <div class="day header">Mon</div>
                        <div class="day header">Tue</div>
                        <div class="day header">Wed</div>
                        <div class="day header">Thu</div>
                        <div class="day header">Fri</div>
                        <div class="day header">Sat</div>
                        <div class="day header">Sun</div>
                    </div>
                    <div class="days" data-group="days">
                        <!-- the place where days will be generated -->
                    </div>
                </div>
                <!-- Responsive calendar - END -->
                <h3>Latest</h3>
                <ul class="side-list">
                    {{#each data.latest}}
                        <li><a href="/blog/post/{{slug}}">{{title}}</a></li>
                    {{/each}}
                </ul>
                <h3>Category</h3>
                <ul class="side-list">
                    {{#each data.categories}}
                        <li><a href="/blog/{{key}}">{{name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    $(document).ready(function () {
        $('.responsive-calendar').responsiveCalendar({
            time: '{{data.calendar.time}}',
            events: {{data.calendar.events}}
        });

        $('#mixit').mixitup();
    });
</script>