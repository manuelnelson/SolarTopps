        {{> profile-sideMenu}}
        <div class="col-md-9">
            <div class="content">
                <h1><span>Your Information</span></h1>
                <form class="form-horizontal">
                    <fieldset>
                        <legend>(*Required)</legend>
                        {{> user-information}}
